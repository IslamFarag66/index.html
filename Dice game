<body>

<div class="game-container">
  <h1>Roll the Dice for Your Question!</h1>
  <div class="dice" id="dice">?</div>
  <button onclick="rollDice()">Roll the Dice</button>
  <button onclick="resetGame()">Reset</button>
  <div class="question" id="question"></div>
  <div class="instructions">
    <p>Answer the question corresponding to the number:</p>
    <ul>
      <li>1: What is your favorite hobby?</li>
      <li>2: Tell me about your last vacation.</li>
      <li>3: Describe your dream job.</li>
      <li>4: What is your favorite book or movie?</li>
      <li>5: Talk about a memorable experience.</li>
      <li>6: What are your plans for the future?</li>
    </ul>
  </div>
</div>

<script>
  const questions = [
    "What is your favorite hobby?",
    "Tell me about your last vacation.",
    "Describe your dream job.",
    "What is your favorite book or movie?",
    "Talk about a memorable experience.",
    "What are your plans for the future?"
  ];

  function rollDice() {
    const dice = document.getElementById('dice');
    const questionDiv = document.getElementById('question');
    const number = Math.floor(Math.random() * 6) + 1;
    dice.textContent = number;
    questionDiv.textContent = questions[number - 1];
    playSound();
  }

  function resetGame() {
    const dice = document.getElementById('dice');
    const questionDiv = document.getElementById('question');
    dice.textContent = '?';
    questionDiv.textContent = '';
  }

  function playSound() {
    const audio = new Audio('https://cdn.pixabay.com/download/audio/2021/08/11/audio_78b6d5c806.mp3?filename=dice-roll-6828.mp3');
    audio.play();
  }
</script>

</body>
</html>
